{
    "name": "vda/http",
    "type": "library",
    "description": "HTTP Support",
    "keywords": ["http"],
     "repositories": [
        {
            "type": "composer",
            "url": "https://composer.vda-team.com/",
            "options": {
                "ssl": {
                    "verify_peer": false
                }
            }
        }
    ],
    "require": {
        "php": ">=5.3.23",
        "vda/util": "0.11.*|0.12.*"
    },
    "suggest": {
        "ext-xmlrpc": "Needed for XmlrpcClient"
    },
    "autoload": {
        "psr-4": { "Vda\\Http\\": "src/" }
    },
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-trunk": "1-dev"
        }
    }
}
